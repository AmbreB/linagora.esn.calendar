.calendar-right-sidebar
  .listview.p-t-5.calendars-list
    .lv-body
      .p-10
        a.lv-item(href="", toggle-calendar-view="basicDay")
          .media
            .pull-left
              i.mdi.mdi-menu
            .media-body
              .lv-title
                span #{__('Planning')}
        a.lv-item(href="", toggle-calendar-view="agendaDay")
          .media
            .pull-left
              i.mdi.mdi-view-day
            .media-body
              .lv-title
                span #{__('Day')}
        a.lv-item(href="", toggle-calendar-view="agendaWeek")
          .media
            .pull-left
              i.mdi.mdi-view-week
            .media-body
              .lv-title
                span #{__('Week')}
        a.lv-item(href="", toggle-calendar-view="month")
          .media
            .pull-left
              i.mdi.mdi-calendar-blank
            .media-body
              .lv-title
                span #{__('Month')}
    .lv-footer

  calendars-list(calendars="calendars")
