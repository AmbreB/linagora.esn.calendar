form.whatsup-form.form-container(role='form')
  span.event-create-error-message
  .form-group
    input.event-input.form-control(type="text", size="12", ng-model='event.title', placeholder="#{__('Event Title')}")
  .form-group
    .input-group
      span.input-group-addon
        i.fa.fa-compass.fa-fw
      input.event-input.form-control(type="text", ng-model='event.location', placeholder="#{__('Event Location')}")
  .form-group.form-inline
    .row
      .col-xs-5.nopadding
        span.help-block #{__('Start of Event')}
        .input-group.margin-bottom-sm.margin-right-sm
          .col-xs-5.nopadding
            input(type="text", size="10", class="form-control", ng-model="event.startDate", data-autoclose="1", data-min-date="today", data-start-week="1", data-date-format="yyyy/MM/dd", placeholder="#{__('Start date')}", ng-change="onStartDateChange()", bs-datepicker)
          .col-xs-5.nopadding
            input(type="text", size="10", class="form-control", ng-class='{invisible: event.allDay}', ng-model="event.startDate", data-autoclose="1", placeholder="#{__('Time')}", ng-change="onStartTimeChange()", bs-timepicker)
      .col-xs-5.nopadding
        span.help-block #{__('End of Event')}
        .input-group.margin-bottom-sm.margin-right-sm
          .col-xs-5.nopadding
            input(type="text", size="10", class="form-control", ng-model="event.endDate", data-autoclose="1", data-min-date="{{getMinDate()}}", data-start-week="1", data-date-format="yyyy/MM/dd", placeholder="#{__('End date')}", bs-datepicker)
          .col-xs-5.nopadding
            input(type="text", size="10", class="form-control", ng-class='{invisible: event.allDay}', ng-model="event.endDate", data-autoclose="1", placeholder="#{__('Time')}", ng-change="onEndTimeChange()", bs-timepicker)
      .col-xs-2.nopadding
        .checkbox
          label
            input(type="checkbox", ng-model='event.allDay' , style='margin-left:10px; margin-right:10px', ng-change="onAllDayChecked()")
            | #{__('All day')}
  .text-center
    button.btn.btn-primary.submit-button(type='button', ng-click='addNewEvent()') #{__('Create')}
    button.btn.btn-default.submit-button(type='button', ng-click="createModal.hide()") #{__('Cancel')}
