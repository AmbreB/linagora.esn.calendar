div.form-container
  form.event-collaboration-form(name='eventMessageForm', role='form', aria-hidden="true", ng-submit='submit()')
    .form-group
      .fg-line
        textarea.form-control(type="text", ng-model='event.title', maxlength="{{::EVENT_FORM.title.maxlength}}", placeholder="#{__('Enter the title of your event')}")
    .row
      .col-xs-2.col-xs-offset-1.col-sm-1.col-sm-offset-0
        .form-group
          .fg-line
            i.mdi.mdi-calendar
      .col-xs-7.col-sm-2
        .form-group
          .fg-line
            input.input.form-control(type="text", size="10", ng-model="event.start", data-autoclose="1", data-min-date="today", data-start-week="1", data-date-format="yyyy/MM/dd", placeholder="#{__('Start date')}", ng-change="onStartDateChange()", bs-datepicker, aria-expanded="false", date-to-moment)
          .fg-line(ng-if='!event.allDay')
            input.input.form-control(type="text", size="10", ng-model="event.start", data-autoclose="1", placeholder="#{__('Time')}", ng-change="onStartDateChange()", ng-blur="focusSubmitButton()", bs-timepicker, aria-expanded="false", date-to-moment)
      .col-xs-2.col-xs-offset-1.col-sm-1.col-sm-offset-0
        .form-group
          .fg-line
            i.mdi.mdi-arrow-right
      .col-xs-7.col-sm-2
        .form-group
          .fg-line
            input.input.form-control(type="text", size="10", class="form-control", ng-model="event.end", data-autoclose="1", data-min-date="{{getMinDate()}}", data-start-week="1", data-date-format="yyyy/MM/dd", placeholder="#{__('End date')}", ng-change="onEndDateChange()", aria-expanded="false", ng-blur="focusSubmitButton()", bs-datepicker, date-to-moment)
          .fg-line(ng-if='!event.allDay')
            input.input(type="text", size="10", class="form-control", ng-model="event.end", data-autoclose="1", data-min-time="{{getMinTime()}}", placeholder="#{__('Time')}", ng-change="onEndDateChange()", aria-expanded="false", ng-blur="focusSubmitButton()", bs-timepicker, date-to-moment)
      .col-xs-11.col-xs-offset-1.col-sm-2.col-sm-offset-0
        .form-group
          .fg-line
            .checkbox
              label
                input(type="checkbox", ng-model='event.allDay', ng-change="focusSubmitButton()")
                i.input-helper #{__('All day')}
    .row
      .col-xs-12
        .form-group
          .input-group
            span.input-group-addon
              i.mdi.mdi-map-marker
            .fg-line
              input.input.form-control(type="text", ng-model='event.location', placeholder="#{__('Location')}")
    .row
      .col-xs-12
        .form-group
          button.btn.btn-primary(type='submit', ng-disabled="restActive")
            span #{__('Publish')}
