.col-xs-12.col-md-10.no-padding-xs.calendar-edit
  h2.hidden-xs Calendar configuration
  .card.form-container
    .card-body.card-padding
      form(ng-submit='submit()')
        .form-group
          label #{__('Name')}
          input.input-sm.form-control(type="text", ng-model="calendar.name")
        .form-group
          label #{__('Color')}
          input.input-sm.form-control(type="text", ng-model="calendar.color")
        .visible-xs
          span.pull-right
            button.btn.btn-default.btn-sm.m-t-10(ng-if="!newCalendar", type="button", ng-click="delete()") #{__('Delete')}
          .clearfix
        .hidden-xs
          button.btn.btn-default.btn-sm.m-t-10(ng-if="!newCalendar", type="button", ng-click="delete()") #{__('Delete')}
          span.pull-right
            button.btn.btn-default.btn-sm.m-t-10(type="button", ng-click="cancel()") #{__('Cancel')}
            button.btn.btn-primary.btn-sm.m-t-10(type="button", ng-click="submit()") #{__('Edit')}
          .clearfix
