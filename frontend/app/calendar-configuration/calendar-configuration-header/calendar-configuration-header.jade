.calendar-configuration-header
  .flex-space-between.flex-vertical-centered
    .left
      button.btn.btn-primary(ng-click="$ctrl.cancelMobile()")
        i.mdi.mdi-close
    .right
      button.btn.btn-primary(ng-if='!$ctrl.newCalendar', ng-click='$ctrl.submit()')
        | #{__('Save')}
        i.mdi.mdi-check
      button.btn.btn-primary(ng-if='$ctrl.newCalendar', ng-click='$ctrl.submit()')
        | #{__('Create')}
        i.mdi.mdi-check
