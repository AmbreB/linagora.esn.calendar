.row
  .col-xs-12.no-padding-xs
    sub-header
      calendar-edit-delegation-add-users-header(selection="$ctrl.selection", new-users-groups="$ctrl.newUsersGroups")
    .card-body.card-padding.visible-xs
      .row
        .col-sm-6.col-xs-12
          span #{__('Delegation on this calendar')}
      .row
        users-autocomplete-input(mutable-users='$ctrl.newUsersGroups')
      .row
        .col-sm-6.col-xs-12
          div.select
            select.form-control(ng-model="$ctrl.selection")
              option(ng-repeat="delegationType in ::$ctrl.delegationTypes", value="{{delegationType.value}}", ng-selected="none") {{delegationType.name}}
