div.form-container
  form.event-message-edition(name='eventMessageForm', role='form', aria-hidden="true", ng-submit='submit()')
    .form-group
      .fg-line
        textarea.form-control(type="text", rows="1", ng-model='event.title', maxlength="{{::EVENT_FORM.title.maxlength}}", placeholder="#{__('Enter the title of your event')}")

    cal-event-date-edition(event="event", disabled="false")

    .row
      .col-xs-12
        .form-group
          .input-group
            span.input-group-addon
              i.mdi.mdi-map-marker
            .fg-line
              input.input.form-control(type="text", ng-model='event.location', placeholder="#{__('Location')}")
    .row
      .col-xs-12
        .form-group
          button.btn.btn-primary(type='submit', ng-disabled="restActive")
            span #{__('Publish')}
