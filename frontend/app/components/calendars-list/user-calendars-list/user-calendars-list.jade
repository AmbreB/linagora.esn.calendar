.lv-body
  .lv-item.calendar-item.calendar-header-title.hidden-md
    .media
      .pull-left
        i.mdi.mdi-calendar
      .media-body
        .lv-title #{__('My calendars')}
  .lv-item.calendar-item.calendar-header-title-desktop.visible-md
    .media
      .pull-left
        i.mdi.mdi-calendar
      .pull-right
        .lv-actions.actions
          .dropdown
            a(href='', data-toggle='dropdown', aria-expanded='true')
              i.mdi.mdi-plus
            ul.dropdown-menu.dropdown-menu-right
              li
                a(ui-sref='calendar.add') #{__('New calendar')}
              li
                a(ui-sref="calendar.public") #{__('Public calendar')}

      .media-body
        .lv-title #{__('My calendars')}
  a.lv-item.calendar-item(href="", ng-repeat="calendar in $ctrl.userCalendars track by $index", ng-click="$ctrl.toggleCalendar(calendar)")
    .media
      .pull-left(ng-if="!$ctrl.hiddenCalendars[calendar.id]", ng-click="$ctrl.toggleCalendar(calendar)", title="#{__('Hide calendar')}")
        i.mdi.mdi-checkbox-marked-outline(ng-style="{'color': calendar.color}")
      .pull-left(ng-if="$ctrl.hiddenCalendars[calendar.id]", ng-click="$ctrl.toggleCalendar(calendar)", title="#{__('Show calendar')}")
        i.mdi.mdi-checkbox-blank-outline
      .pull-right.hidden-xs(ui-sref='calendar.edit({calendarId: calendar.id})', ui-sref-opts='{calendarId: calendar.id}', title="#{__('Configuration')}", ng-click="$event.stopPropagation()")
        i.mdi.mdi-settings
      .media-body.hidden-lg(ng-click="$ctrl.selectCalendar(calendar)")
        .lv-title
          span {{calendar.name}}
      .media-body.visible-lg-block(ng-click="$ctrl.selectCalendar(calendar)", title="{{ calendar.name }}")
        .lv-title
          span {{calendar.name}}