.attendees-list.picture-list.col-xs-12
  .col-xs-10
    .attendees-sublist(ng-if='ctrl.attendeesPerPartstat.ACCEPTED > 0')
      .title #{__('Accepted')}
      cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'ACCEPTED' track by attendee.email")
    .attendees-sublist(ng-if='ctrl.attendeesPerPartstat.DECLINED > 0')
      .title #{__('Declined')}
      cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'DECLINED' track by attendee.email")
    .attendees-sublist(ng-if='ctrl.attendeesPerPartstat["NEEDS-ACTION"] > 0 || ctrl.attendeesPerPartstat["TENTATIVE"] > 0')
      .title #{__('Undecided')}
      cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'NEEDS-ACTION' track by attendee.email")
      cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'TENTATIVE' track by attendee.email")
  .col-xs-2.attendees-bin(ng-if='ctrl.canModifyAttendees && ctrl.attendeeClickedCount > 0', ng-click='ctrl.deleteSelectedAttendees()')
    .trash
      i.mdi.mdi-delete(ng-if='ctrl.canModifyAttendees && ctrl.attendeeClickedCount > 0', ng-click='ctrl.deleteSelectedAttendees()')
