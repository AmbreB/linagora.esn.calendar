.attendees-list.picture-list.col-xs-12
  .col-xs-10
    div(ng-if='ctrl.attendeesPerPartstat.ACCEPTED > 0')
      .fg-line.accepted #{__('Accepted')}
      .fg-line.pl-body(ng-if='ctrl.attendeesPerPartstat.ACCEPTED > 0')
        cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.organizer.email === attendee.email', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'ACCEPTED' track by attendee.email")
    div(ng-if='ctrl.attendeesPerPartstat.DECLINED > 0')
      .fg-line.declined #{__('Declined')}
      .fg-line.pl-body(ng-if='ctrl.attendeesPerPartstat.DECLINED > 0')
        cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.organizer.email === attendee.email', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'DECLINED' track by attendee.email")
    .undecided-category(ng-if='ctrl.attendeesPerPartstat["NEEDS-ACTION"] > 0 || ctrl.attendeesPerPartstat["TENTATIVE"] > 0')
      .fg-line.undecided #{__('Undecided')}
      .fg-line.pl-body(ng-if='ctrl.attendeesPerPartstat["NEEDS-ACTION"] > 0 || ctrl.attendeesPerPartstat["TENTATIVE"] > 0')
        cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.organizer.email === attendee.email', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'NEEDS-ACTION' track by attendee.email")
        cal-attendee-list-item(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.organizer.email === attendee.email', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'TENTATIVE' track by attendee.email")
  .col-xs-2.attendees-bin(ng-if='ctrl.canModifyAttendees && ctrl.attendeeClickedCount > 0', ng-click='ctrl.deleteSelectedAttendees()')
    .trash
      i.mdi.mdi-delete(ng-if='ctrl.canModifyAttendees && ctrl.attendeeClickedCount > 0', ng-click='ctrl.deleteSelectedAttendees()')
