.calendars-configuration.card
  sub-header
    calendars-configuration-header.hidden-md
  .block-header.hidden-xs
    h2 #{__('Calendars configuration')}
  .card-body
    .listview
      .lv-body.no-padding
        a.lv-item(href="", ui-sref='calendar.add')
          .media
            .pull-left
              i.mdi.mdi-plus
              span #{__('Add a new calendar')}
        a.lv-item(ui-sref='calendar.public')
          .media
            .pull-left
              i.mdi.mdi-plus
              span #{__('Add a public calendar')}
        hr
        .calendar-header-title
          .media
            .pull-left
              i.mdi.mdi-calendar
            .media-body
              .lv-title #{__('My calendars')}
        a.lv-item(href="", ng-repeat="calendar in $ctrl.userCalendars", ui-sref='calendar.edit({calendarId: calendar.id})')
          .media
            .pull-left
              i.mdi.mdi-label(ng-style="{'color': calendar.color}")
              span {{::calendar.name}}
        .calendar-header-title
          .media
            .pull-left
              i.mdi.mdi-calendar
            .media-body
              .lv-title #{__('Shared calendars')}
        a.lv-item(href="", ng-repeat="calendar in $ctrl.sharedCalendars", ui-sref='calendar.shared({calendarId: calendar.id})')
          .media
            .pull-left
              i.mdi.mdi-label(ng-style="{'color': calendar.color}")
              span {{::calendar.name}}